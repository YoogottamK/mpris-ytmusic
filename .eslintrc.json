{
  "env": {
    "browser": false,
    "es6": true,
    "webextensions": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "quotes": [
      "error",
      "double"
    ],
    "indent": [
      "error",
      2
    ],
    "curly": [
      "error",
      "all"
    ],
    "func-names": "off",
    "no-multi-assign": "off",
    "no-plusplus": "off",
    "no-magic-numbers": "warn",
    "no-param-reassign": "off",
    "no-extend-native": "off",
    "one-var": [
      "error",
      "consecutive"
    ],
    "prefer-const": "warn",
    "no-global-assign": "warn",
    "no-tabs": "error",
    "strict": "off",
    "no-nested-ternary": "warn",
    "no-use-before-define": "error",
    "prefer-destructuring": "warn",
    "import/prefer-default-export": "off",
    "max-len": [
      "warn",
      {
        "code": 100
      }
    ],
    "no-console": "off",
    "no-continue": "off",
    "linebreak-style": "off",
    "class-methods-use-this": "off",
    "semi": [2, "always", { "omitLastInOneLineBlock": true}]
  }
}
